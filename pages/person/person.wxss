/* pages/mine/mine.wxss */
@import "/pages/movie/movie-grid/movie-grid-template.wxss";
.container {
  background-color: #f0f0f2;
  padding: 0;
}
.container .content {
  height: 100%;
}
.header {
  width: 100%;
  height: 25%;
  background-color: #1e81d2;
  position: relative;
  text-align: center;
  padding-top: 25px;

  /* box-sizing: border-box; */
}
.pointgroup{
padding-bottom: 10px;

}
.integral {
  /* padding-top: 40rpx; */
   min-height: 20%; 
  background-color: #fff;
  width: 100%;
  display: block;
