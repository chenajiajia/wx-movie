}
.setting {
  padding: 10rpx 20rpx;
  min-height: 20%;
  border-top:solid 1px #ccc;
  border-bottom:solid 1px #ccc;
} 
.header .icon {
  width:138rpx;
  height:138rpx;
  margin-bottom: 5px;
  border-radius: 100%;
  border: solid #eee 2px
}

.header text {
  display: inline-block;
  color: #fff;
  font-size: 35rpx;
