}
.order,.setting,.server {
    background-color: #fff;
    width: 100%;
    display: block;
}
.order {
  height: 30%;
}
.order .order-all-header {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 20rpx;
  position: relative;
}

.order-all-content {
  border-top:solid #ccc 1px;
  padding: 20rpx 20rpx;
  display: flex;
  border-bottom:solid #ccc 1px;

}
.order-all-content .order-list-item {
  /* margin-top: 50rpx; */
  flex: 1;
