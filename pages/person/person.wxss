  position: relative;
  border-right:solid #eee 1px;

}
.order-all-content .order-list-item .end{
  /* margin-top: 50rpx; */
  flex: 1;
  text-align: center;
  position: relative;
  /* border-right:solid #eee 1px; */

}
.order-all-content .order-list-item .order-count-icon {
  position: absolute;
  top: -12rpx;
  right: 25rpx;
  width: 50rpx;
  height: 50rpx;
  background-color: #f00;
  border-radius: 100%;
  line-height: 50rpx;
  color: #fff;
}
.order-all-content .order-list-item text {
  font-size: 14px;
  color: #333;
}

.order .order-all-header .col-item-icon {
  margin-top: 25rpx;
}
.order .order-all-header .fr {
  font-size: 14px;
}
