.pas-input {
  border: 0;
  color: #fff;
  font-size: 24rpx;
  height: 68rpx;
  left: -200rpx;
  margin: 0;
  opacity: 0;
  overflow: hidden;
  position: absolute;
  width: 720rpx;
  z-index: 8;
}
.alertBoxBg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}
.alertBox {
  position: fixed;
  top: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 700rpx;
  height: 600rpx;
  background-color: #fff;
  z-index: 99;
}
.alertBox-title {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-bottom: 1px solid #eee;
}

.alertBox-container .input {
  width: 90%;
  margin: 0 auto;
  margin-top: 20rpx;
  padding: 20rpx 10rpx;
  border: 1px solid #eee;
}
.alertBox-container .input {
  display: flex;
}
.alertBox-container .input.mobile {
  position: relative;
  z-index: 99;
}
.alertBox-container .input.mobile button {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 14px;
  height: 90rpx;
  line-height: 90rpx;
  z-index: 99;
}
.alertBox-container .input label {
   font-size: 14px;  
   line-height: 26px;
  flex: 1;
}
.alertBox-container .input input {
  flex: 2;
}
.alertBox-footer {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
}
.alertBox-footer .alertBox-cancel,
.alertBox-footer .alertBox-confirm {
  flex: 1;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 14px;
}
.alertBox-footer .alertBox-cancel {
  position: relative;
}
.alertBox-footer .alertBox-cancel::after {
  content: "";
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 1px;
  background-color: #ccc;
  height: 50rpx;
}
.disabled {
  color: #ccc;
}